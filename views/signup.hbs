<div class="container form">
    <form method="POST" action="/v1/api/user/SignUp">
        <label class="form__label block mb-1">Email</label>
        <input name="email" type="text" class="form__input block mb-3">

        <label class="form__label block mb-1">Họ tên</label>
        <input name="name" type="text" class="form__input block mb-3">

        <label class="form__label block mb-1">Số điện thoại</label>
        <input name="phone" type="text" class="form__input block mb-3">

        <label class="form__label block mb-1">Mật khẩu</label>
        <input name="password" type="password" class="form__input block mb-3">
        <label class="form__label block mb-1">Xác nhận mật khẩu</label>
        <input name="password2" type="password" class="form__input block mb-3">


        <div class="text-center">
            <button type="submit" class="btn btn-2">Đăng kí</button>
        </div>
    </form>

</div>