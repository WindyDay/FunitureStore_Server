 {{#if product}}
<section class="container">
    <h2 class="productName">{{product.name}}</h2>
    <p style="text-align: right">Lượt xem: {{product.views}}</p>
    <div class="row">
        <div class="col-md-6">
            <div id="bigPics">
                <img class="zoom-view" src="{{product.thumbnail}}" alt="" data-zoom-image="{{product.thumbnail}}">
            </div>
            <div id="smallPics">
                {{#each product.images}}
                <img class="default" src="{{this}}" alt="" data-zoom-image="{{this}}"> 
                {{/each}}
            </div>

        </div>

        <div class="col-md-6 ">
            <div class="productDetail">
                <h5 class="oldPrice">
                    <del>{{product.oldPrice}} VND</del>
                </h5>
                <h3 class="newPrice">{{product.price}} VND</h3>
                <h4>Màu sắc:</h4>
                <div class="productColors">
                    {{#each product.colors}}
                        <div class="colorSample" style="background:{{this.hex}}"></div>
                    {{/each}}
                </div>
                <h4>Mô tả:</h4>
                <p class="productDescription">
                    {{{product.description}}}
                </p>
                <h4>Số lượng:</h4>
                <input type="number" name="numOfProducts" id="numOfProducts" value="1">
                <button class="btn btn-2 mt-3">THÊM VÀO GIỎ</button>
            </div>

        </div>
    </div>

    <h3 class="cmtHeader">BÌNH LUẬN</h3>
    <div class="row cmtForm"></div>
    <div class="row">
        <div class="col-md-6">
            <span class="ratingPoint">4.1</span>
            <span>/254 bình luận.</span>
            <br>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <p></p>
            <hr style="border:3px solid #f1f1f1">

            <div class="row">
                <div class="side">
                    <div>5 sao</div>
                </div>
                <div class="middle">
                    <div class="bar-container">
                        <div class="bar-5"></div>
                    </div>
                </div>
                <div class="side right">
                    <div>150</div>
                </div>
                <div class="side">
