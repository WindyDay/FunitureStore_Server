<div class="container form">
    <form action="/v1/api/user/signIn" method="POST">
        <label class="form__label block mb-1">Email</label>
        <input name="email" type="email" class="form__input block mb-3">
        <label class="form__label block mb-1">Mật khẩu</label>
        <input name="password" type="password" class="form__input block mb-3">
        <input class="input-remember" type="checkbox" id="input-remember">
        <label class="label-remember mb-3" for="input-remember">Nhớ mật khẩu</label>
        <div class="text-center">
            <button type="submit" class="btn btn-2">Đăng nhập</button>
        </div>
    </form>
</div>