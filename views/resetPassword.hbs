<div class="container form">
    <form action="/v1/api/user/resetPassword" method="POST">
        <input id="email" name="email" type="hidden" value="{{email}}">
        <input id="resetToken" name="resetToken" type="hidden" value="{{resetToken}}">
        
        <label class="form__label block mb-1">Mật khẩu</label>
        <input name="password" type="password" class="form__input block mb-3">
        <label class="form__label block mb-1">Xác nhận mật khẩu</label>
        <input name="password2" type="password" class="form__input block mb-3">
        <div class="text-center">
            <button type="submit" class="btn btn-2">Reset</button>
        </div>
    </form>
</div>